{
  "extends": [
		"airbnb",
		"wikimedia"
	],
  "rules": {
		"import/extensions": [
			"error",
			"never",
			{
				"png": "always",
				"scss": "always",
				"css": "always"
			}
		],
		"import/no-extraneous-dependencies": ["off"],
		"import/no-unresolved": ["off"],
		"react/jsx-indent-props": [
			"error",
			"tab"
		],
		"jsx-a11y/label-has-for": ["off"],
		"jsx-a11y/anchor-is-valid": ["off"],
		"no-case-declarations": ["off"],
		"one-var": [
			"error",
			"never"
		],
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [
          ".js"
        ]
      }
    ],
		"react/jsx-indent": [
			"error",
			"tab"
		]
  }
}
